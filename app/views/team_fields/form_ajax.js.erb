document.querySelector("#team-field-form #team_field_name").value = "<%= @field&.name %>"
document.querySelector("#team-field-form #team_field_code").value = "<%= @field&.code %>"
document.querySelector("#team-field-form #team_field_description").value = "<%= @field&.description %>"
<% if @field.present? %>
  document.querySelector("#team-field-form #team_field_name").setAttribute("readonly", "true")
  document.querySelector("#team-field-form #team_field_code").setAttribute("readonly", "true")
  document.querySelector("#team-field-form #team_field_description").setAttribute("readonly", "true")
<% else %>
  document.querySelector("#team-field-form #team_field_name").removeAttribute("readonly")
  document.querySelector("#team-field-form #team_field_code").removeAttribute("readonly")
  document.querySelector("#team-field-form #team_field_description").removeAttribute("readonly")
<% end %>

